#!/usr/bin/env node

/**
 * Serveur HTTP avec gestion multi-environnement
 */

const app = require('../app');
const debug = require('debug')('medecins-patients:server');
const http = require('http');
const Consts = require('../config/const');

/**
 * Obtenir le port selon l'environnement
 */
const port = normalizePort(Consts.getPort());
app.set('port', port);

/**
 * CrÃ©er le serveur HTTP
 */
const server = http.createServer(app);

/**
 * Ã‰couter sur le port configurÃ©
 */
server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normaliser le port en nombre, string, ou false
 */
function normalizePort(val) {
  const port = parseInt(val, 10);

  if (isNaN(port)) {
    // Named pipe
    return val;
  }

  if (port >= 0) {
    // Port number
    return port;
  }

  return false;
}

/**
 * Gestionnaire d'erreurs du serveur HTTP
 */
function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  const bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // Gestion des erreurs spÃ©cifiques
  switch (error.code) {
    case 'EACCES':
      console.error(`âŒ ${bind} nÃ©cessite des privilÃ¨ges Ã©levÃ©s`);
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(`âŒ ${bind} est dÃ©jÃ  utilisÃ©`);
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Gestionnaire d'Ã©vÃ©nement "listening" du serveur HTTP
 */
function onListening() {
  const addr = server.address();
  const bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;

  const env = process.env.NODE_ENV || 'development';

  console.log('\nğŸš€ ===== SERVEUR DÃ‰MARRÃ‰ =====');
  console.log(`ğŸ“ URL: http://localhost:${addr.port}`);
  console.log(`ğŸŒ Environnement: ${env}`);
  console.log(`âš¡ App: ${Consts.APP_NAME}`);
  console.log(`ğŸ‘¤ Auteur: ${Consts.APP_AUTHOR}`);
  console.log('ğŸ“š Documentation: http://localhost:' + addr.port + '/v1/api-docs');
  console.log('ğŸ” Test API: http://localhost:' + addr.port + '/v1/info');
  console.log('================================\n');

  debug('Listening on ' + bind);
}

/**
 * Gestion propre de l'arrÃªt du serveur
 */
process.on('SIGTERM', () => {
  console.log('\nğŸ›‘ ArrÃªt du serveur en cours...');
  server.close(() => {
    console.log('âœ… Serveur arrÃªtÃ© proprement');
    process.exit(0);
  });
});

process.on('SIGINT', () => {
  console.log('\nğŸ›‘ ArrÃªt du serveur (Ctrl+C)...');
  server.close(() => {
    console.log('âœ… Serveur arrÃªtÃ© proprement');
    process.exit(0);
  });
});